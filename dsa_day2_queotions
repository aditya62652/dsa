#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"enter a number...."<<endl;
    cin>>n;
    int sum=0;
    int i=1;
    while(i<=n){
        sum=sum+i;
        i=i+1;
    }
    cout<<"sum of numbers is"<<" "<<sum<<endl;
    return 0;
}

enter a number....
20
sum of numbers is 210

#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"enter a number...."<<endl;
    cin>>n;
    int fact=1;
    int i=1;
    while(i<=n){
        fact*=i;
        i+=1;
    }
    cout<<"factorial of given number is.."<<" "<<fact<<endl;
    return 0;
}


enter a number....
8
factorial of given number is.. 40320

#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"enter a number...."<<endl;
    cin>>n;
    int i=2;
    while(i<n){
        if(n%i==0){
        cout<<"not prime...."<<endl;
        }
        else{
            cout<<"prime......"<<endl;
        }
        i=i+1;
    }
    
    return 0;
}

