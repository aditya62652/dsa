#include <iostream>
using namespace std;
int main(){
    int n;
    cout<<"enter a number...."<<endl;
    cin>>n;
    
    cout<<"even number in range are..........."<<endl;
    int i=2;
    while(i<=n){
        if(i%2==0){
            cout<<i<<endl;;
            
        }
        i=i+1;
    }
    return 0;
}

enter a number....
10
even number in range are...........
2
4
6
8
10

#include <iostream>
using namespace std;
int main(){
    int n;
    cout<<"enter a number..."<<endl;
    cin>>n;
    cout<<"odd number range for given number....."<<endl;
    int i=1;
    while(i<=n){
        if(i%2==1){
            cout<<i<<endl;
           
        }
         i=i+1;
    }
    return 0;
    
}

