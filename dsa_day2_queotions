#include<iostream>
using namespace std;
int main(){
    cout<<"size of a"<<" "<<sizeof(int)<<endl;
    cout<<"size of b"<<" "<<sizeof(char)<<endl;
    cout<<"size of double"<<" "<<sizeof(double)<<endl;
    return 0;
}

size of a 4
size of b 1
size of double 8

#include<iostream>
using namespace std;
int main(){
    char ch;
    cout<<"enter a character..."<<endl;
    cin>>ch;
    if(ch>='a'&& ch<<'z'){
        cout<<"lowercase.."<<endl;
    }
    else if(ch>='A' && ch<='Z'){
        cout<<"uppercase....."<<endl;
    }
    else if(ch>='0'&& ch<='9'){
        cout<<"numeric....."<<endl;
    }
    else{
        cout<<"invalid....."<<endl;
    }
    return 0;
}

enter a character...
45
numeric.....

#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"enter a number ...."<<endl;
    cin>>n;
    int i=2;
    int sum=0;
    cout<<"The sum of even numbers is..."<<endl;
    while(i<=n){
        if(i%2==0){
            sum=sum+i;
        }
        i=i+1;
    }
    cout<<sum<<endl;
    return 0;
}

enter a number ....
10
The sum of even numbers is...
30

